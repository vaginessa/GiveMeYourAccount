<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/activated_selected_light"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dialog_background"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:id="@+id/linearlayout3"
            >
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_7"
                android:background="@drawable/button_background_7"
                android:layout_marginRight="8dp"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_8"
                android:background="@drawable/button_background_8"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_9"
                android:background="@drawable/button_background_9"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearlayout3"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:id="@+id/linearlayout2"
            >
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_4"
                android:background="@drawable/button_background_4"
                android:layout_marginRight="8dp"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_5"
                android:background="@drawable/button_background_5"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_6"
                android:background="@drawable/button_background_6"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearlayout2"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:id="@+id/linearlayout1"
            >
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_1"
                android:background="@drawable/button_background_1"
                android:layout_marginRight="8dp"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_2"
                android:background="@drawable/button_background_2"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_3"
                android:background="@drawable/button_background_3"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:textSize="32sp"
            android:layout_above="@+id/linearlayout1"
            android:layout_marginBottom="12dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            android:background="@color/activated_selected_light"
            android:id="@+id/text"
            android:gravity="center"

            />
        <Button
            android:layout_width="136dp"
            android:layout_height="19dp"
            android:background="@drawable/button_background"
            android:id="@+id/button"
            android:layout_alignBottom="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />
    </RelativeLayout>
</RelativeLayout>